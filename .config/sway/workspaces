# vi: filetype=swayconfig

### Workspaces
#
# Define names for default workspaces for which we configure key bindings later on.
# Use variables to avoid repeating the names in multiple places.
set $ws1 1:
set $ws2 2:﬏
set $ws3 3:
set $ws4 4:
set $ws5 5:
set $ws6 6:
set $ws7 7:
set $ws8 8:
set $ws9 9:
set $ws10 10:

bindcode {
	# switch to workspace
	$mod+$Key_1 workspace $ws1
	$mod+$Key_2 workspace $ws2
	$mod+$Key_3 workspace $ws3
	$mod+$Key_4 workspace $ws4
	$mod+$Key_5 workspace $ws5
	$mod+$Key_6 workspace $ws6
	$mod+$Key_7 workspace $ws7
	$mod+$Key_8 workspace $ws8
	$mod+$Key_9 workspace $ws9
	$mod+$Key_0 workspace $ws10

	# move focused container to workspace
	$mod+Shift+$Key_1 move container to workspace $ws1
	$mod+Shift+$Key_2 move container to workspace $ws2
	$mod+Shift+$Key_3 move container to workspace $ws3
	$mod+Shift+$Key_4 move container to workspace $ws4
	$mod+Shift+$Key_5 move container to workspace $ws5
	$mod+Shift+$Key_6 move container to workspace $ws6
	$mod+Shift+$Key_7 move container to workspace $ws7
	$mod+Shift+$Key_8 move container to workspace $ws8
	$mod+Shift+$Key_9 move container to workspace $ws9
	$mod+Shift+$Key_0 move container to workspace $ws10

	$mod+$Key_slash workspace back_and_forth
}
