# vi: filetype=swayconfig

mode "resize" {
    bindcode {
        $mod+$Key_h resize grow width 10 px or 10 ppt
        $mod+$Key_l resize shrink width 10 px or 10 ppt
        $mod+$Key_j resize shrink height 10 px or 10 ppt
        $mod+$Key_k resize grow height 10 px or 10 ppt

        # same bindings, but for the arrow keys
        $mod+$Key_Left resize grow width 10 px or 10 ppt
        $mod+$Key_Right resize shrink width 10 px or 10 ppt
        $mod+$Key_Down resize shrink height 10 px or 10 ppt
        $mod+$Key_Up resize grow height 10 px or 10 ppt

        $mod+$Key_q mode "default"
        $mod+$Key_Return mode "default"
        $Key_Escape mode "default"
        $mod+$Key_r mode "default"
    }
}

### Windows
#Move your focus around
# Switch between windows
bindcode {
    $mod+$Key_h focus left
    $mod+$Key_l focus right

    $mod+$Key_j focus down
    $mod+$Key_k focus up

    $mod+Shift+Control+$Key_j focus mode_toggle
    $mod+Shift+Control+$Key_k focus mode_toggle

    $mod+$Key_r mode "resize"

    $mod+Control+$Key_f floating toggle

    $mod+$Key_i inhibit_idle open
    $mod+Shift+$Key_i inhibit_idle none
    $mod+Control+$Key_i exec 'swaymsg inhibit_idle $(echo "focus\nfullscreen\nopen\nnone" | bemenu -p "idle inhibitor mode ->")'

    $mod+Control+$Key_s split toggle

    ## In the future for toggle bars
#    $mod+Control+$Key_b bar mode invisible 0

    # Move the focused window with the same, but add Shift
    $mod+Shift+$Key_h move left
    $mod+Shift+$Key_j move down
    $mod+Shift+$Key_k move up
    $mod+Shift+$Key_l move right

    ## Cycle layouts
    $mod+$Key_Tab layout toggle all

    # Kill focused window
    $mod+$Key_w kill

	## shutdown computer
    $alt+Control+$Key_Delete exec loginctl poweroff

    ## Restart computer
    $alt+Control+$Key_Insert exec loginctl reboot

    ## Hibernate computer
    $mod+Control+$Key_Delete exec loginctl hibernate

    ## Suspend computer
    $mod+Control+$Key_Insert exec loginctl suspend

    # Launcher
    $mod+$Key_m exec $menu

    # Start a terminal
    $mod+$Key_Return exec $term
    $mod+Shift+$Key_Return exec alacritty

    # Browsers
    $mod+$Key_b exec microsoft-edge-dev
    $mod+$Key_f exec firefox

    # Screenshots
    $mod+$Key_s exec grim - | swappy -f -
    $mod+Shift+$Key_s exec grim -g "$(slurp)" - | swappy -f -
    $Key_Print exec grim - | swappy -f -

    ## Music players
    $mod+$Key_p exec spotify

    # Messengers
    $mod+$Key_t exec telegram-desktop

    # Miscellaneous
    $mod+$Key_d exec droidcam
    $mod+$Key_z exec zoom


    ### Hardware
    $mod+$Key_minus exec pactl set-sink-volume @DEFAULT_SINK@ -$volume_step%
    $mod+$Key_equal exec pactl set-sink-volume @DEFAULT_SINK@ +$volume_step%
    $mod+$Key_BackSpace exec pactl set-sink-mute @DEFAULT_SINK@ toggle


    ## mpd
    $mod+$Key_n exec foot ncmpcpp
    $mod+Shift+$Key_n exec cantata


    $mod+$alt+$Key_F1 exec mpc prev
    $mod+$alt+$Key_F2 exec mpc toggle
    $mod+$alt+$Key_F3 exec mpc next
    $mod+$alt+$Key_minus exec mpc volume -$volume_step
    $mod+$alt+$Key_equal exec mpc volume +$volume_step
    $mod+$alt+$Key_BackSpace exec mpc toggleoutput 1


    $alt+$Key_minus exec vol_spotify -$volume_step%
    $alt+$Key_equal exec vol_spotify +$volume_step%
    $alt+$Key_BackSpace exec vol_spotify toggle-mute

    #playerctl -p spotify,vlc,%any play-pause

    $alt+$Key_F1 exec playerctl --player=spotify previous
    $alt+$Key_F2 exec playerctl --player=spotify play-pause
    $alt+$Key_F3 exec playerctl --player=spotify next


    $mod+$Key_F1 exec playerctl --ignore-player=spotify previous
    $mod+$Key_F2 exec playerctl --ignore-player=spotify play-pause
    $mod+$Key_F3 exec playerctl --ignore-player=spotify next

    # Make the current focus fullscreen
    $mod+Shift+$Key_f fullscreen toggle
}

    floating_modifier $mod normal
