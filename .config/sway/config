# vi: filetype=swayconfig

#### Very important, do not put comments in the same line of a 
#configuration, or otherwise not work
### Variables

# Appearance
default_border pixel 2
default_floating_border pixel 2
smart_borders on
smart_gaps on
gaps inner 6
gaps outer -6

# Volume
set $volume_step 2

# Terminal emulator
set $term footclient runtmux

# Launcher
set $menu bemenu-run --ignorecase --no-overlap --list=15 --scrollbar=autohide --prompt="->"

# Modifiers
set $mod Mod4
set $alt Mod1


### Autostart
exec redshift -m wayland
exec pidof pipewire 2>&1 > /dev/null || gentoo-pipewire-launcher
exec fnott
exec foot --server
exec swayidle -w
#exec udiskie -s &

### Output configuration
# The path of you wallpapers
set $wallpaper `chbg --print`
output * bg $wallpaper fill

### Input configuration
input "type:keyboard" {
    xkb_layout "latam,latam,us"
    xkb_model "pc105"
    xkb_variant "dvorak,,"
    xkb_options "grp:win_space_toggle,keypad:pointerkeys,terminate:ctrl_alt_bksp"
    xkb_numlock enable
}

input "type:pointer" {
    accel_profile flat
    dwt disabled
    pointer_accel 0.0
}

### Fonts
font pango:Caskaydia Cove Nerd Font 14
client.focused #6000ff #6000ff #ffffff #7e30ff

### Keys
include ./define-keys
bindcode {
    # Reload the configuration file
    $mod+Control+$Key_r reload
    # Exit sway (it will not ask you for confirmation)
    $mod+Control+$Key_q exit
}
include ./keys

### Rules (like dwm)
include ./rules

### Workspaces
include ./workspaces

### Bar
bar {
    id 0
    swaybar_command waybar
}

bar {
    id 1
    swaybar_command waybar-bottom
}
