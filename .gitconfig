[init]
	defaultBranch = main
[core]
	editor = emacsclient
	autocrlf = false
	# use bat if available, else use less
	pager = (which bat > /dev/null 2>&1 && bat -l diff || less)
	whitespace = blank-at-eol,blank-at-eof,space-before-tab
[color]
	ui = auto
	diff = auto
	branch = auto
	grep = auto
	interactive = auto
	status = auto
[commit]
	verbose = true
	gpgSign = true
[tag]
	gpgSign = true
[rebase]
	autoStash = true
[push]
	gpgSign = if-asked
[pull]
	rebase = true
[format]
	signoff = true
[merge]
	tool = emerge
